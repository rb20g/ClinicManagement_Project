<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Clinic.Views.TreatmentView"
             Title="TreatmentView"
             NavigatedTo="TreatmentView_NavigatedTo">
    <VerticalStackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Text="Treatment Name:"/>
            <Entry Grid.Column="1" Text="{Binding Name}"/>
            <Label Grid.Column="2" Text="Treatment Price:"/>
            <Entry Grid.Column="3" Text="{Binding Price}"/>
        </Grid>
        <Button
            Text="Add Treatment"
            Clicked="AddClicked"
            />
        <Button
            Text="Cancel"
            Clicked="CancelClicked"
            />
    </VerticalStackLayout>
</ContentPage>